<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/etQPTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="Set Title"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Add a Question"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etQPTitle"
        android:layout_centerHorizontal="true"
        android:id="@+id/bAddAQs"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Set Question Paper"
        android:layout_below="@+id/bAddAQs"
        android:id="@+id/bSetQP"/>
</RelativeLayout>